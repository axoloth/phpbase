{% trans_default_domain 'security' %}
{% extends 'front/layout.html.twig' %}

{% block title %}{{ 'reset_email.title'|trans() }}{% endblock %}

{% block content %}
<section class="pt-4 pb-4">
    <div class="container">
        <div class="col-lg-6 mx-auto">
            <div class="card mt-4 mb-4 rounded">
                <div class="card-body">
                    {{ form_start(form) }}
                        <h1 class="h3 mb-3 font-weight-normal">{{ 'reset_email.h1'|trans() }}</h1>
                        {{ form_errors(form) }}
                        {% if form.password is defined %}
                            {{ form_row(form.password) }}
                        {% elseif form.email is defined %}
                            {{ form_row(form.email) }}
                        {% endif %}
                        <div class="form-group text-center">
                            <button id="button_submit" class="btn bg-white text-primary btn-block button" type="submit">
                                {{ 'reset_email.btn.submit'|trans() }}
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
