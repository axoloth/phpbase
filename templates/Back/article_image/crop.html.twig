{% trans_default_domain 'back_messages' %}
{% extends "back/layout.html.twig" %}

{% block title %}
    {{ 'article_image.crop.title'|trans() }}
{% endblock %}

{% block content %}
    <section class="pt-4 pb-4">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <h1 class="h3">{{ 'article_image.crop.h1'|trans() }}</h1>
                </div>
                <div class="col-sm-6 text-right">
                    <p>
                        <a href="{{ path('back_article_update', { 'id': article.id }) }}" class="btn btn-info" role="button">
                            <i class="fas fa-reply"></i>
                            {{ 'button.back'|trans() }}
                        </a>
                    </p>
                </div>
            </div>
            <hr>
            <div class="card mt-4 mb-4">
                <div class="card-body">
                    <h2 class="card-title">{{ 'article_image.crop.h2'|trans() }}</h2>
                    <div class="p-4 border border-light">
                        {{ form_start(form) }}
                        {{ form_row(form.crop) }}
                        <div id="spinner" class="d-flex justify-content-center invisible">
                            <div class="spinner-border" role="status">
                                <span class="sr-only">Loading...</span>
                            </div>
                        </div>
                        <button id="btn_submit" class="btn btn-info btn-block">
                            <i class="far fa-paper-plane"></i>
                            {{ 'button.submit'|trans() }}
                        </button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $("#btn_submit").click( function (e) {
                $('#spinner').removeClass('invisible');
                $('#btn_submit').addClass('invisible');
            });
        });
    </script>
{% endblock %}